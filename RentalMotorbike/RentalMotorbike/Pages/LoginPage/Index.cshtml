@page
@model RentalMotorbike.Pages.LoginPage.IndexModel
@{
    ViewData["Title"] = "Login page";
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Arial', sans-serif;
    }

    body {
        background: linear-gradient(135deg, #0bab64 0%, #3bb78f 100%);
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .header {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: white;
        font-size: 1.2rem;
        background: rgba(0, 0, 0, 0.1);
    }

        .header .logo {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .header nav {
            display: flex;
            gap: 20px;
        }

            .header nav a {
                color: white;
                text-decoration: none;
                font-size: 1rem;
            }

    .login-box {
        background: #ffffff;
        border-radius: 15px;
        padding: 50px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
        text-align: center;
        margin-left: 450px;
    }

    h1 {
        margin-bottom: 30px;
        color: #2d2d2d;
        font-size: 28px;
    }

    .input-group {
        margin-bottom: 25px;
        text-align: left;
    }

        .input-group label {
            font-size: 16px;
            color: #2d2d2d;
            margin-bottom: 8px;
            display: block;
        }

        .input-group input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 16px;
            transition: 0.3s ease;
        }

            .input-group input:focus {
                border-color: #0bab64;
                box-shadow: 0 0 8px rgba(11, 171, 100, 0.4);
            }

    .login-btn {
        background: #0bab64;
        color: white;
        padding: 12px;
        border: none;
        border-radius: 8px;
        font-size: 18px;
        cursor: pointer;
        transition: 0.3s;
        width: 100%;
        margin-top: 15px;
    }

        .login-btn:hover {
            background: #098d56;
            box-shadow: 0 5px 15px rgba(11, 171, 100, 0.3);
        }

    p {
        margin-top: 20px;
        color: #2d2d2d;
    }

    a {
        color: #0bab64;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }

</style>
<div class="header">
    <div class="logo">Rental Motorbike</div>
    <nav>
        <a href="#">Home</a>
        <a href="#">Privacy</a>
    </nav>
</div>

<div class="login-box">
    <h1 class="display-4">Login</h1>
    @if (TempData["Message"] != null)
    {
        <div class="text-danger">@TempData["Message"]</div>
    }
    <form method="post" asp-page-handler="OnPost">
        <div class="input-group">
            <label for="email">Email</label>
            <input type="text" id="email" name="email" placeholder="Enter your email" required>
        </div>
        <div class="input-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" required>
        </div>
        <button type="submit" class="login-btn">Login</button>
    </form>

    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>