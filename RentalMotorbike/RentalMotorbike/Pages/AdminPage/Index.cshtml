@page
@model RentalMotorbike.Pages.AdminPage.IndexModel
@{
    ViewData["Title"] = "Admin page";
}
<div class="admin-container">
    <div class="background-gradient">
        <div class="admin-actions">
            <form method="post">
                <button type="submit" name="handler" value="MotorbikeManagementPage" class="btn btn-success">Motorbike Management</button>
                <button type="submit" name="handler" value="CustomerManagement" class="btn btn-info">Customer Management</button>
                <button type="submit" name="handler" value="Logout" class="btn btn-danger">Logout</button>
            </form>
        </div>
    </div>
</div>

<style>
    .admin-container {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .background-gradient {
        background: linear-gradient(45deg, #FF92619E, #FFCC8D8D);
        padding: 50px;
        border-radius: 15px;
    }

    .admin-actions {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .btn {
        padding: 15px;
        font-size: 18px;
        cursor: pointer;
        border: none;
        border-radius: 5px;
        width: 100%;
    }

    .btn-success {
        background-color: #8ADA55;
        color: white;
    }

    .btn-info {
        background-color: #8ADA;
        color: white;
    }

    .btn-danger {
        background-color: #ED4848;
        color: white;
    }
</style>