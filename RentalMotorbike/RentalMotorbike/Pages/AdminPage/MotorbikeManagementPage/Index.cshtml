@page
@model RentalMotorbike.Pages.AdminPage.MotorbikeManagementPage.IndexModel

@{
    ViewData["Title"] = "Motorbike Management";
}

<style>
    h1 {
        font-size: 2rem;
        color: #007bff;
        font-weight: bold;
    }

    .btn-primary, .btn-secondary {
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        color: #ffffff;
    }

    .btn-secondary:hover {
        background-color: #6c757d;
        color: #ffffff;
    }

    .table {
        background-color: #ffffff;
        border-radius: 8px;
        overflow: hidden;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f8ff;
    }

    .table-primary th {
        background-color: #007bff;
        color: #ffffff;
        text-align: center;
    }

    .text-info {
        color: #17a2b8;
        font-weight: bold;
        font-size: 1.2rem;
    }
</style>

<div class="container mt-5 p-4" style="background-color: #f8faff; border-radius: 8px;">
    <h1 class="text-center">Motorbike Management</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <<a href="./Index" class="btn btn-secondary">Back</a>
        <a asp-page="Create" class="btn btn-primary">Create New Motorbike</a>
    </div>

    @if (TempData["Message"] != null)
    {
        <h2 class="text-info text-center">@TempData["Message"]</h2>
    }

    <table class="table table-hover table-bordered mt-3 shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Motorbike[0].Brand)</th>
                <th>@Html.DisplayNameFor(model => model.Motorbike[0].Model)</th>
                <th>@Html.DisplayNameFor(model => model.Motorbike[0].LicensePlate)</th>
                <th>@Html.DisplayNameFor(model => model.Motorbike[0].RentalPricePerDay)</th>
                <th>@Html.DisplayNameFor(model => model.Motorbike[0].Status)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Motorbike)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Brand)</td>
                    <td>@Html.DisplayFor(modelItem => item.Model)</td>
                    <td>@Html.DisplayFor(modelItem => item.LicensePlate)</td>
                    <td>@Html.DisplayFor(modelItem => item.RentalPricePerDay)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status.StatusId)</td>
                    <td class="text-center">
                        <a asp-page="./Edit" asp-route-id="@item.MotorbikeId" class="btn btn-outline-primary btn-sm me-2">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.MotorbikeId" class="btn btn-outline-info btn-sm me-2">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.MotorbikeId" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
