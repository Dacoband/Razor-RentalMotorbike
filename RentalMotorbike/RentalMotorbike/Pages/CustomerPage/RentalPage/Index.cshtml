@page
@model RentalMotorbike.Pages.CustomerPage.RentalPage.IndexModel

@{
    ViewData["Title"] = "List History Motorbike Rentaled";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rental[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rental[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rental[0].TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rental[0].Motorbike)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rental[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Rental) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Motorbike.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <form method="post">
        <button type="submit" name="handler" value="Back" class="btn btn-danger">Back to home</button>
    </form>
</div>
